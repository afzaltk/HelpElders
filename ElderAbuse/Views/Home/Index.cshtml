@*@Scripts.Render("~/Scripts/app.js")*@
@Styles.Render("~/Content/style.css")

@{
    ViewBag.Title = "Home Page";
}

<div id="content" class="cryout">

    <div id="container" class="fluida-landing-page one-column">
        <main id="main" role="main" class="main">

            <section class="lp-staticslider">
                <img class="lp-staticslider-image" alt="H.E.L.P" src="~/img/static.jpg" style="margin-top:70px;width:auto;height:auto"/>
                <div class="staticslider-caption">
                    <h2 class="staticslider-caption-title">H.E.L.P</h2>	
                    
                    <span class="staticslider-sep"></span>		
                    <div class="staticslider-caption-text">Help Elders Live Peacefully</div>	
                    <div class="staticslider-caption-buttons">
                    </div>
                </div>
            </section><!-- .lp-staticslider -->

            <section id="lp-blocks1" class="lp-blocks lp-blocks1 lp-blocks-rows-2">
                <div class="lp-blocks-inside">
                    <div class="lp-block block1">
                        <i class="glyphicon glyphicon-question-sign"></i>
                        <a href="@Url.Action("Questionnaire","Questions", new { id = 1 }) ">
                            <div class="lp-block-content">

                                <h5 class="lp-block-title" style="font-size:25px;font:bold">Questionnaire</h5>
                                <div class="lp-block-text" style="text-align:justify;font-size:22px">Take a simple quiz to assess yourself regarding elder abuse. You can even use this quiz to assess someone that you are concerned about as well .</div>			
                                <a class="lp-block-readmore" style="font-size:22px" href="@Url.Action("Questionnaire","Questions", new { id = 1 })"> Read More <em class="screen-reader-text">"Questionnaire"</em> </a>
                            </div>
                            </a>
                    </div><!-- lp-block -->
                    <div class="lp-block block2">
                        @*<i class="flaticon-survey-1" style="display:inline;"></i>*@
                        <i class="glyphicon glyphicon-info-sign"></i>
                        <a href="@Url.Action("Index","Information")">
                            <div class="lp-block-content">
                                <h5 class="lp-block-title" style="font-size:25px;font:bold">Information</h5>
                                <div class="lp-block-text" style="text-align:justify;font-size:22px">You can gain more support information like identifying Elder Abuse Types, &amp; the Signs of abuse and Risk factors. </div>
                                <a class="lp-block-readmore" style="font-size:22px" href="@Url.Action("Index","Information")"> Read More <em class="screen-reader-text">"Information"</em> </a>
                            </div>
                        </a>
                    </div><!-- lp-block -->
                </div>
            </section>

        </main><!-- #main -->
    </div><!-- #container -->
    <footer id="footer" class="cryout" role="contentinfo" itemscope itemtype="http://schema.org/WPFooter">
        <div id="footer-inside">
            <a id="toTop"> <span class="screen-reader-text">Back to Top</span> <i class="icon-back2top"></i> </a><div id="site-copyright">H.E.L.P is a tool for senior and general public to detect elder abuse »<b></b> If you have any questions, please email us<a href="#"> thesentials@gmail.com</a>
                       
        </div> <!-- #footer-inside -->
            </div>
    </footer>
   </div>
