@using (Html.BeginForm("Questionnaire", "Questions", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4></h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        

        <div class="form-group">
            <div class="questionArea">
                <hr />
                <div class="questionNumber">
                </div>
                <div class="question">
                    <span>  @Html.DisplayFor(newModel => newModel.question.QuestionId). &nbsp; @Html.DisplayFor(newModel => newModel.question.Question1)</span>
                </div>
            </div>
            
        </div>

        <div class="form-group">
            @Html.LabelFor(newModel => newModel.response.Answer, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(newModel => newModel.response.Answer, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(newModel => newModel.response.Answer, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Next Question" class="btn btn-default" />
            </div>
        </div>
    </div>
}



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}